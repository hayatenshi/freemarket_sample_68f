.wrapper

  .single-header
    = link_to '#' do
      = image_tag 'material/logo/logo.png'


  .single-main
    .sell-container
      .sell-container-inner
        %h2.sell-header
          商品の情報を入力
        = form_for @item do |f|
          .sell-form
            .sell-form__upload-box
              %h3.sell-form__upload-head
                出品画像
                %span.form-require
                  必須
              %p
                最大10枚までアップロードできます
              .sell-form__drop-image
                %p
                  ドラッグアンドドロップ
                %p
                  またはクリックしてファイルをアップロード



            .sell-content
              .sell-content__form-group-name
                = f.label :商品名
                %span.form-require
                  必須
                %br/
                = f.text_field :name, class: "sell-form-pulldown"
              .sell-content__form-group-name
                = f.label :商品の説明
                %span.form-require
                  必須
                %br/
                = f.text_field :description, class: "sell-form-pulldown"

            .sell-content
              %h3
                商品の詳細
              .sell-form-right
                .sell-content__form-group-name
                = f.label :カテゴリー
                %span.form-require
                  必須
                %br/
                = f.select :category, [["選択してください"],["レディース"], ["メンズ"], ["ベビー・キッズ"], ["インテリア・住まい・小物"], ["本・音楽・ゲーム"], ["おもちゃ・ホビー・グッズ"], ["コスメ・香水・美容"], ["家電・スマホ・カメラ"], ["スポーツ・レジャー"],["ハンドメイド"], ["チケット"], ["自転車・オートバイ"], ["その他"]], {}, class: "sell-form-pulldown"
              .sell-content__form-group-name
                = f.label :商品の状態
                %span.form-require
                  必須
                %br/
                = f.select :condition, [["選択してください"],["新品未使用"], ["未使用に近い"], ["目立った傷や汚れなし"], ["やや傷や汚れあり"], ["傷や汚れあり"], ["全体的に状態が悪い"]], {}, class: "sell-form-pulldown"


            .sell-content
              %h3
                配送について
              .sell-form-right
                .sell-content__form-group-name
                = f.label :配送料の負担
                %span.form-require
                  必須
                %br/
                = f.select :shopping_charges, [["選択してください"],["送料込み(出品者負担)"], ["送料込み(出品者負担)"]], {}, class: "sell-form-pulldown"

                .sell-content__form-group-name
                = f.label :配送元の地域
                %span.form-require
                  必須
                %br/
                = f.select :shopping_area, [["選択してください"],["北海道"], ["青森県"], ["岩手県"], ["宮城県"], ["秋田県"], ["山形県"],["福島県"],["茨城県"],["栃木県"],["群馬県"], ["埼玉県"],["千葉県"],["東京都"],["神奈川県"],["新潟県"], ["富山県"],["石川県"],["福井県"],["山梨県"],["長野県"], ["岐阜県"],["静岡県"],["愛知県"],["三重県"],["滋賀県"], ["京都府"],["大阪府"],["兵庫県"],["奈良県"],["和歌山県"], ["鳥取県"],["島根県"],["岡山県"],["広島県"],["山口県"], ["徳島県"],["香川県"],["愛媛県"],["高知県"],["福岡県"], ["佐賀県"],["長崎県"],["熊本県"],["大分県"],["宮崎県"], ["鹿児島県"],["沖縄県"],["未定"]], {}, class: "sell-form-pulldown"

                .sell-content__form-group-name
                = f.label :発送までの日数
                %span.form-require
                  必須
                %br/
                = f.select :shopping_date	, [["選択してください"],["1~2日で発送"], ["2~3日で発送"], ["4~7日で発送"]], {}, class: "sell-form-pulldown"

            .sell-content.price
              %h3.sell-form-price
                価格（¥300〜9,999,999）
                .sell-form-price-box
                  %p.sell-form-group-price
                    販売価格
                    %span.form-require
                      必須
                    
                  = f.text_field :price, class: "price-pulldown-blue"
                      

                .sell-form-price-box
                  %p.sell-form-group-fee
                    販売手数料
                    
                  .price-pulldown
                    ー

                .sell-form-price-box
                  %p.sell-form-group-price
                    販売利益
                    
                  .price-pulldown
                    ー


            .sell-content.sell-btn-box
              .sell-button-box
                = f.submit "出品する", class: 'sell-button'
                = link_to "戻る", root_path, class: 'sell-button-back'
                  
              .sell-attention
                %p
                  禁止されている
                  = link_to '#' do
                    出品
                  、
                  = link_to '#' do
                    行為
                  を必ずご確認ください
                  
                %p
                  またブランド品でシリアルナンバー等がある場合はご記載ください。
                  = link_to '#' do
                    偽ブランドの販売
                  は犯罪であり処罰される可能性があります。
                  また、出品をもちまして
                  = link_to '#' do
                    加盟店規約
                  に同意したことになります。


  .single-footer
    .footer-nav
      %ul.clearfix
        %li
          = link_to '#' do
            プライバシーポリシー
        %li
          = link_to '#' do
            フリマ利用規約
        %li
          = link_to '#' do
            特定商取引に関する表記
        
    = link_to '#', class: "single-footer__logo" do
      = image_tag 'material/logo/logo-white.png', class: "img"
    %p
      ©️FURIMA