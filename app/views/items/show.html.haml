      -#   %ul
      -#     %li.like-btn
      -#       お気に入り
      -#   %ul
      -#     %li.report-btn
      -#       = link_to "#", class: "opitinal-btn" do
      -#         不適切な商品の情報
      -# 上記追加実装

    %ul.links
      %li
        = link_to "#", class: "select-before" do
          前の商品
      %li
        = link_to "#", class: "selectーafter" do
          後ろの商品
    .man-item
      = link_to "#", class: "mense-btn" do
        メンズをもっとみる

._footer
  = render partial: 'shared/footer'
