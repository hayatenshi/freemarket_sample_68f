.productList 
  = link_to item_path(item.id) do
    .productList__img
      - item.images.each do |image|
        = image_tag image.image.url, class: "item-image"
        - if item.buyer.present? 
          .sold-out
            SOLD
        - break

    .productList__body
      .item-name
        .item-name__text
          = item.name
      .details
        %ul
          %li
            ¥
            = item.price
          %li
            %i.linkIcon
            0
        %p
          (税込)