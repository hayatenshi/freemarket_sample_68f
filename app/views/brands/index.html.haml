.wrapper
  = render "shared/header"
  = render 'nav'
  .brand-main
    .brand-main__top
      ブランド一覧
    .brand-main__contents
      %ul.brand-japanese
        - japanese.each do |kana|
          %li.brand-japanese__box
            .japanese-list
              .japanese-list__top
                = "#{kana}行"
              %ul.japanese-list__box
                - @items.each do |item|
                  - if first(item.brand).match(/^#{kana}/)
                    %li.japanese-list__box__name
                      = link_to brand_path(item[:id]), class: "brand-name" do
                        = item.brand
  = render "shared/footer"