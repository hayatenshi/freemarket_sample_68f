%body
  .single-container
    %header.single-header
      %h1
        = link_to root_path, class: "header-link" do
          =image_tag "material/logo/logo.png", size: "300x300"
      %nav
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          ログイン画面
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .l-single-content
            .form-group
              = f.label :メールアドレス
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-basic", placeholder: "メールアドレス"
            .form-group
              = f.label :パスワード
              %br/
              = f.password_field :password, autocomplete: "current-password", class: "input-basic", placeholder: "パスワード"
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :パスワード保存
            .form-group
              = f.submit "ログイン", class: "next-btn"
          = render "devise/shared/links"

    .single-footer
      %nav
        %ul.clearfix
          %li
            = link_to "#", class: "btn" do
              プライパシーポリシー
          %li
            = link_to "#", class: "btn" do
              メルカリ利用規約
          %li
            = link_to "#", class: "btn" do
              特定商取引に関する表記
        .single-footer-logo
          =image_tag "material/logo/logo-white.png", size: "150x40"
          %p
            %small
              ©️FURIMA

