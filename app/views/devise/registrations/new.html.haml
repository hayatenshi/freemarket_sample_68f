%body
  .single-container
    %header.single-header
      %h1
        %a{:href => "https://www.mercari.com/jp/"}
          %img{:alt => "mercari", :src => "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?35314277",size: "300x300"}/
      %nav
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          会員情報入力
        = form_for(@user, url: user_registration_path) do |f|
          = render "devise/shared/error_messages", resource: @user
          .l-single-content
            .form-group
              = f.label :ニックネーム
              %span.form-requre
                必須
              %br/
              = f.text_field :name, class: "input-basic", placeholder: "例）メルカリ太郎"
            .form-group
              = f.label :メールアドレス
              %span.form-requre
                必須
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-basic", placeholder: "PC・携帯どちらでも可"
            .form-group
              = f.label :パスワード
              %span.form-requre
                必須
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} 文字以上)
              %br/
              = f.password_field :password, autocomplete: "new-password", class: "input-basic", placeholder: "７文字以上半角英数字"
            .form-group
              = f.label :パスワード（確認用）
              %span.form-requre
                必須
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} 文字以上)
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "input-basic", placeholder: "７文字以上半角英数字"

              .form-group
              %h3 本人確認
              %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません

            .form-group
              = f.label :お名前（全角）
              %span.form-requre
                必須
              %br/
              = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例）山田"
            .form-group
              = f.label :お名前（全角）
              %span.form-requre
                必須
              %br/
              = f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "例）太郎"
            .form-group
              = f.label :お名前カナ（全角）
              %span.form-requre
                必須
              %br/
              = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "例）ヤマダ"
            .form-group
              = f.label :お名前カナ（全角）
              %span.form-requre
                必須
              %br/
              = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "例）タロウ"
            .form-group
              = f.label :西暦
              %span.form-requre
                必須
              %br/
              = f.text_field :birth_year, autofocus: true, autocomplete: "birth_year"
            .form-group
              = f.label :月
              %span.form-requre
                必須
              %br/
              = f.text_field :birth_month, autofocus: true, autocomplete: "birth_month"
            .form-group
              = f.label :日
              %span.form-requre
                必須
              %br/
              = f.text_field :birth_day, autofocus: true, autocomplete: "birth_day"
            .actions
              = f.submit "次へ進む"
        = render "devise/shared/links"
