%body
  .single-container
    %header.single-header
      %h1
        %a{:href => "https://www.mercari.com/jp/"}
          %img{:alt => "mercari", :src => ""}/
      %nav
        %ol.clearfix
          %li.active
            会員情報
            .progress-status
          %li.active
            電話番号認証
            .progress-status
          %li.active
            完了
            .progress-status
    %main.single-main
      %section.l-single-container
        %h2.l-single-head.registration
          会員情報入力
        = form_for(@user, url: user_registration_path) do |f|
          = render "devise/shared/error_messages", resource: @user
          .l-single-content
            .form-group
              = f.label :name
              %br/
              = f.text_field :name
            .form-group
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email"
            .form-group
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password"
            .field
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password"
            .form-group
              = f.label :family_name
              %br/
              = f.text_field :family_name, autofocus: true, autocomplete: "family_name"
            .form-group
              = f.label :last_name
              %br/
              = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
            .form-group
              = f.label :family_name_kana
              %br/
              = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana"
            .form-group
              = f.label :last_name_kana
              %br/
              = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"
            .form-group
              = f.label :birth_year
              %br/
              = f.text_field :birth_year, autofocus: true, autocomplete: "birth_year"
            .form-group
              = f.label :birth_month
              %br/
              = f.text_field :birth_month, autofocus: true, autocomplete: "birth_month"
            .form-group
              = f.label :birth_day
              %br/
              = f.text_field :birth_day, autofocus: true, autocomplete: "birth_day"
            .actions
              = f.submit "次へ進む"
        = render "devise/shared/links"
